{
  "spec_dir": "spec",
  "spec_files": [
    "**/*[sS]pec.?(m)js"
  ],
  "helpers": [
    "helpers/**/*.?(m)js",
    "support/junit-reporter.js"
  ],
  "env": {
    "stopSpecOnExpectationFailure": false,
    "random": true
  },
  "reporters": [
    {
      "name": "jasmine-reporters",
      "type": "JUnitXmlReporter",
      "options": {
        "savePath": "./reports",
        "filePrefix": "junit-report",
        "consolidate": true,
        "consolidateAll": true
      }
    }
  ]
}